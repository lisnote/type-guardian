{
  "name": "type-guardian",
  "version": "0.0.0",
  "description": "Powerful functions for type checking.",
  "license": "MIT",
  "author": {
    "name": "lisnote",
    "email": "lisnote@lisnote.com",
    "url": "https://github.com/lisnote"
  },
  "homepage": "https://github.com/lisnote/type-guardian",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "test": "vitest",
    "build": "vite build",
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:prettier": "prettier --write  \"./**/*.ts\" --ignore-path .gitignore",
    "lint:eslint": "eslint \"./**/{\\.*,*}.ts\" --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/node": "^18.19.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "~8.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.1.3"
  }
